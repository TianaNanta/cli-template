import typer
from rich import print

from {{package_name}}.config import settings

app = typer.Typer(
    name="{{project_name}}", help="{{project_description}}"
)


@app.command()
def hello(name: str):
    print(f"Hello {name}")


@app.command()
def goodbye(name: str, formal: bool = False):
    if formal:
        print(f"Goodbye Ms. {name}. Have a good day.")
    else:
        print(f"Bye {name}!")


@app.command()
def version():
    print(f"{{project_name}} [green]v{settings.VERSION}[/green]")
